@model List<YllariFM.Source.ViewModels.BibliasVms.LeerIndexBibliaDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section head3{

    <link rel="stylesheet" href="~/theme/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
}

@section tail2{
    <script src="~/theme/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/theme/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#tabla1').DataTable( {
              "columnDefs": [
                { "width": "15%", "targets": 2 }
              ]
            } );
            //table.columns.adjust().draw();
        });
    </script>
}

<div class="row">
    <div class="col-md-12">
        <h2>Biblias</h2>

        <div class="box box-solid">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-hover dataTable" id="tabla1">
                            <thead>
                                <tr>
                                    <th>
                                        Año
                                    </th>
                                    <th>
                                        Mes
                                    </th>
                                    <th>Accion</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Anho)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Mes)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdBiblia" class="btn btn-default">
                                                <span class="fa fa-pencil"></span>
                                            </a>
                                            @*
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="fa fa-transgender-alt">Delete</a>
                                            *@

                                            <a asp-action="Delete" asp-route-id="@item.IdBiblia" class="btn btn-default">
                                                <span class="fa fa-trash-o"></span>
                                            </a>

                                            <a asp-action="Ver" asp-route-id="@item.IdBiblia" class="btn btn-default">
                                                <span class="fa fa-eye"></span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-default" onclick="window.location.href='/Home/Index'">Ir al inicio</button>
        <button type="button" class="btn btn-primary pull-right" onclick="window.location.href='/Biblias/Create'">Crear Biblia</button>
    </div>
</div>

