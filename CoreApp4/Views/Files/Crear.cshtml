                            <td><input class="form-control" data-bind="value: nombrePasajero" placeholder="Christian Cueva" /></td>

                            <td><input class="form-control" data-bind="value: tren" placeholder="EXP" /></td>
                            <td><input class="form-control" data-bind="value: alm" placeholder="AYASQA" /></td>
                            <td><input class="form-control" data-bind="value: obs" placeholder="Observaciones..." /></td>
                            <td>
                                <a class="btn btn-default" data-bind="click: $root.quitarServicio">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
            <div class="box-footer">
                <button class="btn btn-default" data-bind="click: agregarServicio"><i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;Agregar servicio</button>
            </div>
        </div>
    </div>


    <div class="col-md-12">
        <h4>Transportes</h4>
        <div class="box box-solid">
            <div class="box-body">
                <table class="table" id="tabla2">
                    <thead>


