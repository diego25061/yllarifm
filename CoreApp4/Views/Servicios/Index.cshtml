<div class="row">
    <div class="col-md-12">
        <h2>Servicios </h2>

        <h4>Generales</h4>
        <div class="box box-solid">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-hover dataTable" id="tabla1">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre
                                    </th>
                                    <th>
                                        File
                                    </th>
                                    <th>
                                        Fecha
                                    </th>
                                    <th>
                                        Ciudad
                                    </th>
                                    <th>
                                        Hotel
                                    </th>
                                    <th>
                                        Cant. Pasajeros
                                    </th>
                                    <th>Pasajero</th>
                                    <th>Proveedor</th>
                                    <th>Accion</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.servsGenerales) {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @*@Html.DisplayFor(modelItem => item.CodigoFile) *@
                                            @Html.ActionLink(item.CodigoFile, "Details/" + item.IdFile, "Files")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fecha)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ciudad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Hotel)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CantPasajeros)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombrePasajero)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Proveedor)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdServicio" class="btn btn-default">
                                                <span class="fa fa-pencil"></span>
                                            </a>

                                            <a asp-action="Details" asp-route-id="@item.IdServicio" class="btn btn-default">
                                                <span class="fa fa-eye"></span>
                                            </a>

                                            <a asp-action="Calendar" asp-route-id="@item.IdServicio" class="btn btn-default">
                                                <span class="fa fa-calendar-check-o"></span>
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.IdServicio" class="btn btn-danger">
                                                <span class="fa fa-trash-o"></span>
                                            </a>
                                            @*
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id" class="fa fa-transgender-alt">Delete</a>
                                            *@

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

        <h4>Transporte</h4>


        <div class="box box-solid">
            <div class="box-body">

                @*--------------*@
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-hover dataTable" id="tabla2">
